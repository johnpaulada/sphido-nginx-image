<!DOCTYPE html>
<html lang="en" ng-app="help">
<head>
	<meta charset="utf-8">
	<title>{$page->title}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="{$page->description}">
	<meta name="robots" content="all"/>
	<meta name="author" content="{$page->author}"/>
	<link rel="me" type="text/html" href="https://plus.google.com/102792250956539127203"/>
	<meta name="generator" content="Sphido CMS"/>
	<!-- jQuery https://jquery.com/ -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
	<script src="{url 'js/app.js'}"></script>
	<!-- Twitter Bootstrap http://getbootstrap.com/ -->
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<!-- highlight.js -->
	<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/styles/monokai-sublime.min.css">
	<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.6.0/highlight.min.js"></script>
	<script>hljs.initHighlightingOnLoad();</script>
	<link rel="stylesheet" href="{url 'css/style.css'}" type="text/css"/>
	<link rel="shortcut icon" href="{url 'favicon.ico'}" type="image/x-icon"/>
</head>
<body class="{$page->class}">
<!-- navigation -->
<nav class="navbar navbar-static-top navbar-inverse">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="collapse navbar-collapse" id="nav">
			<ul class="nav navbar-nav">
				{foreach \cms\menu() as $item}
					<li n:class="$page->id === $item->id ? active" id="{$item->id}">
						<a href="{$item->getUrl()}">{$item->menu ? $item->menu : $item->title}</a>
					</li>
				{/foreach}
				<li><a href="/download">Download</a></li>
			</ul>
		</div>
	</div>
</nav>
<!-- /navigation -->

<!-- header -->
<header n:ifset="#header">{include header}</header>
<!-- /header -->

<!-- content -->
<div class="container" n:block="page">
	<div class="row">
		<div class="col-md-12">
			<article n:ifset="#content">{include content}</article>
		</div>
	</div>
</div>
<!-- /content -->

<!-- footer -->
<footer n:ifset="#footer">{include footer}</footer>
<!-- /footer -->

